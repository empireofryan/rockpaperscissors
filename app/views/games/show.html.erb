<div class="container">
  <div class="header">
    <div id="url" style="">COPY URL (<%= game_url(@game) %>) TO FRIEND TO PLAY</div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h3 class='name'><%= @game.player_one.name %></h3>
      <h3 class="score">Score: <%= @game.choices.where(winner_id: @game.player_one.id).count %></h3>
      <%= link_to((image_tag "rock.png"),choices_path(game_id: @game.id, player_one_id: @game.player_one.id, option: 'rock'), method: :post, :id => "rock", :class => "turn", remote: true) %>
      <%= link_to((image_tag "paper.png"),choices_path(game_id: @game.id, player_one_id: @game.player_one.id, option: 'paper'), method: :post,:id => "paper", remote: true) %>
      <%= link_to((image_tag "scissors.png"), choices_path(game_id: @game.id, player_one_id: @game.player_one.id, option: 'scissors'), method: :post,:id => "scissors", remote: true) %>
    </div>
    <div class="col-md-8">
      <h1 class="title" style="">ROCK, PAPER, SCISSORS - SHOOT!</h1>
      <p class="oval-speech-choose bubble-text" style="position:absolute; margin-left:400px; margin-top:-60px">Choose your pick</p>
      <p class="oval-speech-waiting bubble-text" style="position:absolute; margin-left:400px; margin-top:-60px">Waiting for opponent</p>
      <p class="oval-speech-result bubble-text" style="position:absolute; margin-left:400px; margin-top:-60px"> @result3 <br> @player.name wins</p>
      <%= image_tag "referee.png", :id => "referee" %>
    </div>
    <div class="col-md-2">
      <h3 class='name'><%= @game.player_two.name %></h3>
      <h3 class='score'>Score: <%= @game.choices.where(winner_id: @game.player_two.id).count %></h3>
      <%= link_to((image_tag "rock.png"),choices_path(game_id: @game.id, player_two_id: @game.player_two.id, option: 'rock'), method: :post, :id => "opp_rock", remote: true) %>
      <%= link_to((image_tag "paper.png"),choices_path(game_id: @game.id, player_two_id: @game.player_two.id, option: 'paper'), method: :post,:id => "opp_paper", remote: true) %>
      <%= link_to((image_tag "scissors.png"), choices_path(game_id: @game.id, player_two_id: @game.player_two.id, option: 'scissors'), method: :post,:id => "opp_scissors", remote: true) %>
    </div>
  </div>
</div>

