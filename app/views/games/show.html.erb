  $( "#rock" ).animate({
    left: "+=150"
  }, 400, function() {
  });
  $( "#scissors" ).animate({
    opacity: .3
  }, 400, function() {
  });
  $( "#paper" ).animate({
    opacity: .3
  }, 400, function() {
  });
  $( ".oval-speech-waiting" ).animate({
    opacity: 1
  }, 1400, function() {
  });
});
